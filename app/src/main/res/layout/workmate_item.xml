<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/workmate_img"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp"
        tools:src="@drawable/ic_group"/>


    <TextView
        android:id="@+id/workmate_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/workmate_img"
        app:layout_constraintTop_toTopOf="@+id/workmate_img"
        app:layout_constraintBottom_toBottomOf="@+id/workmate_img"
        android:layout_marginLeft="16dp"
        tools:text="Workmate text"
        android:maxLines="1"
        android:ellipsize="end"
        />

</androidx.constraintlayout.widget.ConstraintLayout>